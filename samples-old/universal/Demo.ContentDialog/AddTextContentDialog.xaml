<ContentDialog
    x:Class="Demo.ContentDialog.AddTextContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add Text"
    PrimaryButtonText="OK"
    IsPrimaryButtonEnabled="{Binding IsOkButtonEnabled}"
    SecondaryButtonText="Cancel">

    <TextBox
        AutomationProperties.AutomationId="GK6kxoak7keBNC0Ej_UOlA"
        Text="{Binding Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

</ContentDialog>