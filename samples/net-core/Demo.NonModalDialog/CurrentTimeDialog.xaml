<Window
    x:Class="Demo.NonModalDialog.CurrentTimeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Demo.NonModalDialog"
    mc:Ignorable="d"
    Title="Current Time"
    WindowStartupLocation="CenterOwner"
    Width="200"
    Height="100"
    ResizeMode="NoResize"
    d:DataContext="{d:DesignInstance {x:Type local:CurrentTimeDialogViewModel}}">
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding StartClockCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <TextBlock
        AutomationProperties.AutomationId="n_Mu0TdFak-4VJD8RosMEQ"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Text="{Binding CurrentTime, StringFormat=Current time is {0:HH:mm:ss}}" />
</Window>