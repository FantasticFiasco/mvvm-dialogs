<Window
    x:Class="Demo.CustomSaveFileDialog.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
    mc:Ignorable="d"
    md:DialogServiceViews.IsRegistered="True"
    WindowStartupLocation="CenterScreen"
    Title="Demo - Custom Save File Dialog"
    Width="300"
    Height="200"
    DataContext="{Binding Source={StaticResource Locator}, Path=MainWindow}">

    <Window.Resources>
        <ResourceDictionary Source="ApplicationResources.xaml" />
    </Window.Resources>

    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox
            AutomationProperties.AutomationId="-u3vcUdRMUaG4Af_kzSeZQ"
            IsReadOnly="True"
            Text="{Binding Path, Mode=OneWay}" />
        <Button
            Grid.Column="1"
            AutomationProperties.AutomationId="HstqC8HI9EOGiTfPA4_xag"
            Content="Save..."
            Command="{Binding SaveFileCommand}" />
    </Grid>
</Window>